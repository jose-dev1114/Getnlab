# Session secret for cookie encryption
# Generate a secure random string for production
SESSION_SECRET="your_session_secret_here"

# Shopify store configuration
PUBLIC_STORE_DOMAIN="your-store.myshopify.com"
PUBLIC_STOREFRONT_API_TOKEN="your_storefront_api_token"
PUBLIC_STOREFRONT_API_VERSION="2025-01"

# Checkout domain for analytics (required for Shopify Analytics)
PUBLIC_CHECKOUT_DOMAIN="your-store.myshopify.com"

# Klaviyo configuration for email marketing
# Get these from your Klaviyo account:
# 1. Private API Key: Account > Settings > API Keys
# 2. List ID: Lists & Segments > Your List > Settings
KLAVIYO_PRIVATE_API_KEY="your_klaviyo_private_api_key_here"
KLAVIYO_LIST_ID="your_klaviyo_list_id_here"

# Optional: Add other environment variables as needed
# PUBLIC_STOREFRONT_ID=""
# PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID=""
# PUBLIC_CUSTOMER_ACCOUNT_API_URL=""
# PRIVATE_STOREFRONT_API_TOKEN=""
